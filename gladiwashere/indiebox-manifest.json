{
    "type" : "app",

    "info" : {
        "package"         : "##pkgname##",
        "name"            : "Glad I Was Here",
        "tagline"         : "##pkgdesc##",
        "description"       : "<p>Allows website visitors to leave a comment on the site.</p>",

        "developer"       : "##developer##",
        "maintainer"      : "##maintainer##",

        "upstreamversion" : "##pkgver##",
        "packageversion"  : "##pkgver##-##pkgrel##",

        "licenses" : [
            "##license##"
        ]
    },

    "roles" : {
        "apache2" : {
            "defaultcontext" : "/guestbook",
            "depends" : [
                "php",
                "php-apache",
                "php-gd"
            ],
            "apache2modules" : [
                "php5"
            ],
            "phpmodules" : [
                "mysql",
                "mysqli"
            ],
            "appconfigitems" : [
                {
                    "type"         : "file",
                    "name"         : "index.php",
                    "source"       : "web/index.php",
                },
                {
                    "type"         : "file",
                    "name"         : "config.php",
                    "template"     : "tmpl/config.php.tmpl",
                    "templatelang" : "varsubst"
                },
                {
                    "type"         : "symlink",
                    "name"         : "gladiwashere.php",
                    "source"       : "web/gladiwashere.php"
                }
            ]
        },
        "mysql" : {
            "appconfigitems" : [
                {
                    "type"             : "mysql-database",
                    "name"             : "maindb",
                    "retentionpolicy"  : "keep",
                    "retentionbucket"  : "maindb",
                    "privileges"       : "select, insert"
                }
            ],
            "installers" : [
                {
                    "name"   : "maindb",
                    "type"   : "sqlscript",
                    "source" : "sql/create.sql"
                }
            ]
        }
    }
}

